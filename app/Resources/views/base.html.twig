<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# css stylesheets #}
    <link href="{{ asset('media/normalize.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/bootstrap/css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/bootstrap/css/bootstrap-responsive.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/jquery-ui/css/redmond/jquery-ui.custom.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/main.css') }}" rel="stylesheet" media="screen">
    {% block stylesheets %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <button data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar" type="button">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="brand">Nombre proyecto</a>

            <div class="nav-collapse collapse">
                <p class="navbar-text pull-right">
                    Bienvenido <a class="navbar-link" href="#">Visitante</a>
                </p>
                <ul class="nav">
                    <li class="active"><a href="#">Principal</a></li>
                    <li><a href="#about">Acerca de</a></li>
                    <li><a href="#contact">Contacto</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>

{# body of page #}
<div class="container-fluid">
    {% block body %}{% endblock %}
    <footer>
        <p>&copy; Bolivia 2013</p>
    </footer>
</div>


{# javascript section #}
<script src=""></script>
<script src="{{ asset('media/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('media/jquery-ui/js/jquery-ui.custom.js') }}" type="text/javascript"></script>
<script src="{{ asset('media/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('media/main.js') }}" type="text/javascript"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
