<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# css stylesheets #}
    <link href="{{ asset('media/normalize.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/bootstrap/css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/bootstrap/css/bootstrap-responsive.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('media/main.css') }}" rel="stylesheet" media="screen">
    {% block stylesheets %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

{# body of page #}
<div class="container-fluid">
    {% block body %}{% endblock %}
    <footer>
        <p>&copy; Bolivia 2013</p>
    </footer>
</div>


{# javascript section #}
<script src="{{ asset('media/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('media/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('media/main.js') }}" type="text/javascript"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
